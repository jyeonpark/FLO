<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/stored_playlist_select_off_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintBottom_toBottomOf="@id/stored_select_all_tv"
        app:layout_constraintEnd_toStartOf="@id/stored_select_all_tv"
        app:layout_constraintTop_toTopOf="@id/stored_select_all_tv" />

    <ImageView
        android:id="@+id/stored_playlist_select_on_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_playlist_select_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/stored_select_all_tv"
        app:layout_constraintEnd_toStartOf="@id/stored_select_all_tv"
        app:layout_constraintTop_toTopOf="@id/stored_select_all_tv" />

    <TextView
        android:id="@+id/stored_select_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="전체선택"
        app:layout_goneMarginTop="20dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stored_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="전체듣기"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/stored_playlist_select_off_iv"
        app:layout_constraintStart_toEndOf="@id/stored_arrow_right_iv"
        app:layout_constraintTop_toTopOf="@id/stored_playlist_select_off_iv" />

    <TextView
        android:id="@+id/stored_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="편집"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/stored_playlist_select_off_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/stored_playlist_select_off_iv" />


    <ImageView
        android:id="@+id/stored_arrow_right_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_browse_arrow_right"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/stored_select_all_tv"
        app:layout_constraintStart_toEndOf="@+id/stored_select_all_tv"
        app:layout_constraintTop_toTopOf="@id/stored_select_all_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stored_album_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_stored"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/stored_all_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>