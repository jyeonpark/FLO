<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/dialog_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인이 필요한 서비스입니다.\n로그인하시겠습니까?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/dialog_negative_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dialog_positive_tv"
        app:layout_constraintEnd_toStartOf="@id/dialog_positive_tv"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/dialog_positive_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/flo_blue"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dialog_text_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>