<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/album_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoParallaxOffset="1000dp"
    app:umanoDragView="@id/album_slide_layout"
    app:umanoPanelHeight="260dp"
    app:umanoOverlay="false"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album_back_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/album_like_off_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_my_like_off"
            app:layout_constraintEnd_toStartOf="@id/album_more_iv"
            app:layout_constraintTop_toTopOf="@id/album_more_iv" />

        <ImageView
            android:id="@+id/album_like_on_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_my_like_on"
            app:layout_constraintEnd_toStartOf="@id/album_more_iv"
            app:layout_constraintTop_toTopOf="@id/album_more_iv"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/album_more_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/btn_player_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/album_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/btn_arrow_black"
            app:layout_constraintBottom_toBottomOf="@id/album_more_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/album_more_iv" />

        <TextView
            android:id="@+id/album_music_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="IU 5th Album 'LILAC'"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_back_iv" />

        <TextView
            android:id="@+id/album_music_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="아이유 (IU)"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_music_title_tv" />

        <TextView
            android:id="@+id/album_music_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="2021.03.25 | 정규 | 댄스 팝"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_music_singer_tv" />

        <androidx.cardview.widget.CardView
            android:id="@+id/album_album_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_music_info_tv">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/img_album_exp2" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/album_play_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/widget_black_play"
            app:layout_constraintBottom_toBottomOf="@id/album_album_iv"
            app:layout_constraintEnd_toEndOf="@id/album_album_iv" />

        <ImageView
            android:id="@+id/album_lp_iv"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_marginStart="135dp"
            android:src="@drawable/img_album_lp"
            app:layout_constraintBottom_toBottomOf="@id/album_album_iv"
            app:layout_constraintStart_toStartOf="@id/album_album_iv"
            app:layout_constraintTop_toTopOf="@id/album_album_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_slide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/album_tablayout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/album_border_bottom"
            app:tabIndicatorColor="@color/flo_blue"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/flo_blue"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="@color/black">


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수록곡" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세정보" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_linearlayout_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/album_round_background"
            android:paddingStart="17dp"
            android:paddingTop="8dp"
            android:paddingEnd="17dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/album_tablayout_view">

            <TextView
                android:id="@+id/song_mix_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:text="내 취향 MIX"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/song_mix_off_iv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@color/light_grey"
                android:scaleType="fitXY"
                android:src="@drawable/btn_toggle_off"
                app:layout_constraintBottom_toBottomOf="@id/song_mix_tv"
                app:layout_constraintStart_toEndOf="@id/song_mix_tv"
                app:layout_constraintTop_toTopOf="@id/song_mix_tv" />

            <ImageButton
                android:id="@+id/song_mix_on_iv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@color/light_grey"
                android:scaleType="fitXY"
                android:src="@drawable/btn_toggle_on"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/song_mix_tv"
                app:layout_constraintStart_toEndOf="@id/song_mix_tv"
                app:layout_constraintTop_toTopOf="@id/song_mix_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/song_playlist_select_off_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_playlist_select_off"
            app:layout_constraintBottom_toBottomOf="@id/song_select_all_tv"
            app:layout_constraintEnd_toStartOf="@id/song_select_all_tv"
            app:layout_constraintTop_toTopOf="@id/song_select_all_tv" />

        <ImageView
            android:id="@+id/song_playlist_select_on_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_playlist_select_on"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/song_select_all_tv"
            app:layout_constraintEnd_toStartOf="@id/song_select_all_tv"
            app:layout_constraintTop_toTopOf="@id/song_select_all_tv" />

        <TextView
            android:id="@+id/song_select_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="전체선택"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_linearlayout_view" />

        <TextView
            android:id="@+id/song_listen_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="전체듣기"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/song_playlist_select_off_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/song_playlist_select_off_iv" />

        <ImageView
            android:id="@+id/song_arrow_right_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_browse_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/song_listen_all_tv"
            app:layout_constraintEnd_toStartOf="@id/song_listen_all_tv"
            app:layout_constraintTop_toTopOf="@id/song_listen_all_tv" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_listen_all_tv">

            <LinearLayout
                android:id="@+id/song_music_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/song_01_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/song_list_order_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="01"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_title_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/song_round_background"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="TITLE"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@id/song_list_order_01_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_01_tv" />

                    <TextView
                        android:id="@+id/song_list_name_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="라일락"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_order_01_tv"
                        app:layout_constraintStart_toEndOf="@id/song_list_title_01_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_01_tv" />

                    <TextView
                        android:id="@+id/song_list_singer_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이유 (IU)"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/song_list_title_01_tv"
                        app:layout_constraintTop_toBottomOf="@id/song_list_title_01_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_01_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_01_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_more_01_iv"
                        app:layout_constraintEnd_toStartOf="@id/song_list_more_01_iv"
                        app:layout_constraintTop_toTopOf="@id/song_list_more_01_iv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/song_02_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/song_list_order_02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="02"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_name_02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Flu"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/song_list_order_02_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_02_tv" />

                    <TextView
                        android:id="@+id/song_list_singer_02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이유 (IU)"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/song_list_name_02_tv"
                        app:layout_constraintTop_toBottomOf="@id/song_list_name_02_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_02_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_02_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_more_02_iv"
                        app:layout_constraintEnd_toStartOf="@id/song_list_more_02_iv"
                        app:layout_constraintTop_toTopOf="@id/song_list_more_02_iv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/song_03_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/song_list_order_03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="03"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_title_03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/song_round_background"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="TITLE"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@id/song_list_order_03_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_03_tv" />

                    <TextView
                        android:id="@+id/song_list_name_03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Coin"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_order_03_tv"
                        app:layout_constraintStart_toEndOf="@id/song_list_title_03_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_03_tv" />

                    <TextView
                        android:id="@+id/song_list_singer_03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이유 (IU)"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/song_list_title_03_tv"
                        app:layout_constraintTop_toBottomOf="@id/song_list_title_03_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_03_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_03_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_more_03_iv"
                        app:layout_constraintEnd_toStartOf="@id/song_list_more_03_iv"
                        app:layout_constraintTop_toTopOf="@id/song_list_more_03_iv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/song_04_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/song_list_order_04_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="04"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/song_list_name_04_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="봄 안녕 봄"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/song_list_order_04_tv"
                        app:layout_constraintTop_toTopOf="@id/song_list_order_04_tv" />

                    <TextView
                        android:id="@+id/song_list_singer_04_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이유 (IU)"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/song_list_name_04_tv"
                        app:layout_constraintTop_toBottomOf="@id/song_list_name_04_tv" />

                    <ImageView
                        android:id="@+id/song_list_more_04_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/song_list_play_04_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintBottom_toBottomOf="@id/song_list_more_04_iv"
